{
  "name": "spotify-vinyl-player",
  "version": "1.0.0",
  "description": "A cute vinyl player app connected to Spotify",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite preview",
    "electron:dev": "tsc -p tsconfig.node.json && electron .",
    "electron:build": "tsc && vite build && tsc -p tsconfig.node.json && electron-builder"
  },
  "keywords": ["electron", "spotify", "vinyl", "music"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "build": {
    "appId": "com.spotifyvinylplayer.app",
    "productName": "Spotify Vinyl Player",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.music",
      "target": ["dmg"]
    }
  }
}

